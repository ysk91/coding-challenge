<div class="container">
  <%= form_with url: output_simulations_path, method: :get, local: true, class: 'mt-5' do |f| %>
    <h1 class="text-center mb-4">電気料金シミュレーション</h1>
    <div class="row mb-3">
      <div class="col-md-6 offset-md-3">
        <div class="input-group">
          <%= f.label :contract_ampere, '契約アンペア数', class: 'input-group-text' %>
          <%= f.select :contract_ampere, [10, 15, 20, 30, 40, 50, 60], {}, { class: 'form-select' } %>A
        </div>
      </div>
    </div>
    <div class="row mb-4">
      <div class="col-md-6 offset-md-3">
        <div class="input-group">
          <%= f.label :usage, '使用量', class: 'input-group-text' %>
          <%= f.number_field :usage, class: 'form-control', required: true %>kWh
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 offset-md-3 text-center">
        <%= f.submit 'シミュレーション開始', class: 'btn btn-primary', data: { disable_with: '送信中...' } %>
      </div>
    </div>
  <% end %>
</div>
